    <script src = "/socket.io/socket.io.js"></script>
    <script> var socket = io();</script>
    <script src="public/script/g1_main.js"> </script>
   
    <script>
       var myind;
       socket.on('new_conn',(data)=>{
        let result='Current number of active players: '
           result+=data.num;
           document.getElementById('active_user').innerHTML=result;
           document.getElementById("visb").style.display='none';
       })
       socket.on('room_full',()=>{
            window.location.href = '/full';
       })
       socket.on('start_game',(data)=>{
           myind=data.id;
           arr1=[0,0,0,0]
           cul_arr=[0,0];
           assign(arr1,data.role);
           document.getElementById('active_user').innerHTML=' ';
           document.getElementById("visb").style.display='block';
           callback(data.id,data.role,cul_arr,data.score);
       })
    </script>
